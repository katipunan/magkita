= form_for :session, url: session_path, html: { class: "bg-white shadow-md rounded px-8 pt-6 pb-8" } do |form|
  .text-field.mb-4
    = form.label :email, class: "label"
    = form.text_field :email, type: 'email', class: "input"
  .password-field.mb-6
    = form.label :password, class: "label"
    = form.password_field :password, class: "input"
  .submit-field.mb-4
    = form.submit nil, class: "btn btn-blue"
  .other-links.flex.items-center.justify-between
    - if Clearance.configuration.allow_sign_up?
      = link_to t(".sign_up"), sign_up_path, class: "link-blue inline-block align-baseline text-sm"
    = link_to t(".forgot_password"), new_password_path, class: "link-blue inline-block align-baseline text-sm"
